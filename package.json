{
  "name": "mest-protocol",
  "version": "1.0.0",
  "repository": "git@github.com:mest-io/mest-protocol.git",
  "author": "dev@mest.io",
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "compile": "forge compile",
    "test": "forge test --fork-url https://mainnet.optimism.io",
    "coverage": "forge coverage --fork-url https://mainnet.optimism.io",
    "deploy:testnet": "make deploy-testnet",
    "deploy:mainnet": "make deploy-mainnet",
    "fmt": "forge fmt --check && solhint \"{scripts,contracts,test}/**/*.sol\"",
    "lint": "solhint 'contracts/**/*.sol'",
    "clean": "rm -rf artifacts broadcast cache cache-foundry docs out-optimized out"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "dotenv": "^16.0.0",
    "ds-test": "github:dapphub/ds-test#master",
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.4",
    "solidity-coverage": "^0.8.12",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.6",
    "solady": "^0.0.198"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true,
    "plugins": [
      "prettier-plugin-solidity"
    ]
  }
}