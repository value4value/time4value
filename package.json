{
  "name": "mest-protocol",
  "version": "1.0.0",
  "repository": "git@github.com:mest-io/mest-protocol.git",
  "author": "dev@mest.io",
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "compile": "forge compile",
    "coverage": "forge coverage",
    "test": "forge test --fork-url https://arbitrum.llamarpc.com",
    "clean": "rm -rf artifacts broadcast cache cache-foundry docs out-optimized out",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:test": "solhint 'test/**/*.sol'",
    "deploy": "source .env && forge script script/Deploy.s.sol:DeployScript --rpc-url $OPTIMISM_SEPOLIA_RPC --broadcast --verify -vvvv"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.5.6",
    "prettier": "^2.8.8",
    "solady": "0.0.129",
    "solhint": "^4.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3"
  }
}
