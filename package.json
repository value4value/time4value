{
  "name": "mest-protocol",
  "version": "1.0.0",
  "repository": "git@github.com:mest-io/mest-protocol.git",
  "author": "dev@mest.io",
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "compile": "forge compile",
    "clean": "rm -rf artifacts broadcast cache cache-foundry docs out-optimized out",
    "coverage": "forge coverage --fork-url https://mainnet.optimism.io",
    "integration": "npx hardhat test",
    "verify": "npx hardhat verify",
    "test": "forge test -vvv --fork-url https://mainnet.optimism.io",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:test": "solhint 'test/**/*.sol'",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol' 'test/**/*.sol'",
    "deploy": "source .env && forge script script/Deploy.s.sol:DeployScript --rpc-url $OPTIMISM_SEPOLIA_RPC --broadcast --verify -vvvv"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "dotenv": "^16.0.0",
    "ds-test": "github:dapphub/ds-test#master",
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.4",
    "solidity-coverage": "^0.8.12",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.6",
    "solady": "^0.0.198"
  }
}
